<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/llbottom"
        app:layout_constraintTop_toTopOf="parent">
        <!--        <com.proton.view.EcgRealTimeView-->
        <!--            android:id="@+id/id_ecg_view"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_weight="1"-->
        <!--            />-->
        <com.yxf.jsdemo.MyView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:circleColor="#ffff00"
            app:circleRadius="80dp"
            app:circleText="centerText"
            app:circleTextColor="#333334"
            app:circleTextSize="12sp"
            android:background="#eeeeee"
            />

        <com.yxf.jsdemo.MyLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/mylayout_bg">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="button1"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="button2"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="button3"
                android:textAllCaps="false" />

        </com.yxf.jsdemo.MyLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llbottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/connectCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="connectCard"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="disconnect"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnCallJs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="sendDataToH5"
            android:textAllCaps="false" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>